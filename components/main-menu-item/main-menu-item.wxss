@import '../../assets/fonts/icons/iconfont.wxss';

.menu-item text {
  margin-right: .45em;
  font-family: 'OnePrintIcons', 'Radikal' !important
}

.menu-item {
  position: relative;
  padding: 18px 80rpx;
  font-size: 24px;
  text-shadow: 0 0 5px rgba(0, 0, 0, .7);
  overflow: hidden;
  transition: transform .35s ease .2s
}

.menu-item-active {
  background-color: rgba(0, 0, 0, .3);
  box-shadow: inset 0 0 15px rgba(0, 0, 0, .3)
}

.ink {
  position: absolute;
  left: 0;
  top: 0;
  width: 40px;
  height: 40px;
  background-color: rgba(255, 255, 255, .3);
  border-radius: 50%;
  animation: ripple .35s linear;
  animation-fill-mode: forwards
}

@keyframes ripple {
  0% {
    opacity: 1;
    transform: scale(0)
  }

  100% {
    opacity: 0;
    transform: scale(8)
  }
}